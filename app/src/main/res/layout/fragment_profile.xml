<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <Button
        android:id="@+id/btnGuardarPerfil"
        style="@style/Widget.Shrine.Button"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:background="@drawable/btns_esquinas_redondeadas"
        android:drawableRight="@drawable/ic_save_black_24dp"
        android:onClick="handle_Guardar"
        android:text="@string/guardar"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_pefil"
        app:layout_constraintVertical_bias="0.966" />

    <TextView
        android:id="@+id/txt_Contrasenya1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Contrasenya;"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Usuari1" />

    <TextView
        android:id="@+id/txt_TitolLogin"
        android:layout_width="394dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tf_esquinas_redondeadas"
        android:gravity="center"
        android:text="@string/perfil_usuario"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Usuari1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Usuari;"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/img_pefil"
        app:layout_constraintTop_toBottomOf="@+id/txt_TitolLogin" />

    <ImageView
        android:id="@+id/img_pefil"
        android:layout_width="109dp"
        android:layout_height="108dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_TitolLogin"
        app:srcCompat="@drawable/persona" />

    <TextView
        android:id="@+id/txt_usuarioSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toEndOf="@+id/txt_Usuari1"
        app:layout_constraintTop_toBottomOf="@+id/txt_TitolLogin" />

    <TextView
        android:id="@+id/txt_contraSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toEndOf="@+id/txt_Contrasenya1"
        app:layout_constraintTop_toBottomOf="@+id/txt_usuarioSalida" />

    <RadioGroup
        android:id="@+id/rdg_idiomes"
        android:layout_width="263dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toEndOf="@+id/img_pefil"
        app:layout_constraintTop_toBottomOf="@+id/txt_TitolLogin">

        <LinearLayout
            android:id="@+id/LinLayout_rdb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdb_angles"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:text="Anglès" />

            <RadioButton
                android:id="@+id/rdb_catala"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:text="Català" />

            <RadioButton
                android:id="@+id/rdb_castella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Castellà" />
        </LinearLayout>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>